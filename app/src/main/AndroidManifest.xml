<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.tubs.ibr.dtn.sharebox">

	<!--DTN_COMMUNICATIONの許可?,外部ストレージへの書き出し,バイブレーションへのアクセス,ネットワークへのアクセス-->
	<uses-permission android:name="de.tubs.ibr.dtn.permission.DTN_COMMUNICATION" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher_dtn_round"
		android:label="@string/app_name"
		android:theme="@style/MainTheme"
		android:networkSecurityConfig="@xml/network_security_config">
		<activity
			android:name=".ui.TransferListActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<service
			android:name="de.tubs.ibr.dtn.sharebox.DtnService" />
		
		<receiver
			android:enabled="true"
			android:name=".DtnReceiver"
			android:exported="true"
			android:permission="de.tubs.ibr.dtn.permission.DTN_SERVER">
			<intent-filter>
				<action android:name="de.tubs.ibr.dtn.intent.STATE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<!-- Add intent filter for notification of incoming bundles -->
			<intent-filter android:priority="100">
				<action android:name="de.tubs.ibr.dtn.intent.RECEIVE" />
				<category android:name="de.tubs.ibr.dtn.sharebox" />
			</intent-filter>
			<!-- Add intent filter for status reports generated by the DTN service -->
			<intent-filter>
				<action android:name="de.tubs.ibr.dtn.intent.STATUS_REPORT" />
				<category android:name="de.tubs.ibr.dtn.sharebox" />
			</intent-filter>
		</receiver>
		
		<activity
			android:name=".ui.SettingsActivity"
			android:label="@string/title_activity_settings"
			android:parentActivityName=".ui.TransferListActivity" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="de.tubs.ibr.dtn.sharebox.ui.TransferListActivity" />
		</activity>
		
		<activity
			android:icon="@mipmap/ic_launcher_dtn_round"
			android:name=".ui.PendingDialog"
			android:label="@string/title_activity_pending_dialog"
			android:theme="@style/Theme.Dialog"
			android:excludeFromRecents="true" />
		
		<activity android:icon="@drawable/ic_activity_download"
			android:name=".ui.PackageFileActivity"
			android:label="@string/title_activity_download"
			android:parentActivityName=".ui.TransferListActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="de.tubs.ibr.dtn.sharebox.ui.TransferListActivity" />
		</activity>
		
		<activity android:icon="@mipmap/ic_launcher_dtn_round"
			android:name=".ui.ShareWithActivity"
			android:label="@string/title_activity_sharewith"
			android:launchMode="singleTask">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="*/*" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEND_MULTIPLE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="*/*" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.SelectDestinationActivity"
			android:label="@string/app_name">
		</activity>

		<activity
			android:name=".SyncEIDActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="dtn" android:host="sync.eid" />
			</intent-filter>
		</activity>

		<activity
			android:name=".RegisterEIDActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="dtn" android:host="register.eid" />
			</intent-filter>
		</activity>
	</application>

</manifest>
